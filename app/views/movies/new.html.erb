<h1>New Movie</h1>

<%= form_with(model: @movie, url: movies_path) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :director %>
    <%= form.text_field :director %>
  </div>

  <%= form.submit "Create Movie" %>
<% end %>
<h1>Import Movies</h1>
<%= form_tag import_movies_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import movies CSV", class: "btn btn-primary" %>
<% end %>
<%= flash[:alert] %>